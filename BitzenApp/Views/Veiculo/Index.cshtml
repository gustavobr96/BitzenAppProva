@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Cadastro de Veículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="mb-4">Consulta de Veículos</h2>

<div class="card mb-4">
    <div class="card-body">
        <button class="btn btn-success text-white" id="btnNovoRegistro"><i class="fa fa-plus pull-right"></i> Novo Registro</a></button>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-white font-weight-bold">
        Veículos Cadastrados
    </div>
    <div class="card-body">
        <div class="table-responsive" id="destroy">
            <table class="table table-striped" id="VeiculosCadastrados">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Modelo</th>
                        <th scope="col">Ano</th>
                        <th scope="col">Placa</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Combustível</th>
                        <th scope="col">Quilometragem</th>
                        <th scope="col" style="min-width:80px!important">Opções</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>

<div class=" modal fade modal_confirm" id="modalAlterarRegistro">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Aterar Veículo</h4>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Marca<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Selecione uma marca" /></label>
                            <select class="form-control" name="selMarcaAlt" id="selMarcaAlt"></select>
                            <input type="hidden" id="hdnId" value="0" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Modelo<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Selecione um modelo" /></label>
                            <select class="form-control" name="selModeloAlt" id="selModeloAlt"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Tipo<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe o tipo" /></label>
                            <select class="form-control" name="selTipoAlt" id="selTipoAlt"></select>
                            <input type="hidden" id="hdnModelo" value="0" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Combustível<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe o combustível" /></label>
                            <select class="form-control" name="selCombustivelAlt" id="selCombustivelAlt"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ano<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe o ano" /></label>
                            <input type="text" class="form-control" name="txtAnoAlt" id="txtAnoAlt" maxlength="4" onkeypress="return isNumberKey(event)" required />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Placa<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe a placa sem caracteres especiais" /></label>
                            <input type="text" class="form-control" name="txtPlacaAlt" id="txtPlacaAlt" maxlength="7" pattern="[a-zA-Z0-9]+" required />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Quilometragem<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="informe a quilometragem" /></label>
                            <input type="text" class="form-control" name="txtQuilometragemAlt" id="txtQuilometragemAlt" maxlength="10" onkeypress="return isNumberKey(event)" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="alterar_veiculo"> Salvar</button>
                <button type="button" id="btnVoltar" data-dismiss="modal" class="btn btn-danger"> Fechar</button>
            </div>
        </div>
    </div>
</div>



<div class=" modal fade modal_confirm" id="modalNovoRegistro">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Novo Veiculo</h4>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Marca<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Selecione uma marca" /></label>
                            <select class="form-control" name="selMarca" id="selMarca"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Modelo<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Selecione um modelo" /></label>
                            <select class="form-control" name="selModelo" id="selModelo"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Tipo<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe o tipo" /></label>
                            <select class="form-control" name="selTipo" id="selTipo"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Combustível<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe o combustível" /></label>
                            <select class="form-control" name="selCombustivel" id="selCombustivel"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ano<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe o ano" /></label>
                            <input type="text" class="form-control" name="txtAno" id="txtAno" maxlength="4" onkeypress="return isNumberKey(event)" required />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Placa<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="Informe a placa sem caracteres especiais" /></label>
                            <input type="text" class="form-control" name="txtPlaca" id="txtPlaca" maxlength="7" pattern="[a-zA-Z0-9]+" required />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Quilometragem<b>*</b> <img src="https://img.icons8.com/flat_round/15/000000/info.png" data-toggle="tooltip" data-placement="top" title="informe a quilometragem" /></label>
                            <input type="text" class="form-control" name="txtQuilometragem" id="txtQuilometragem" maxlength="10" onkeypress="return isNumberKey(event)" required />
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="salvar_veiculo">Inserir</button>
                <button type="button" id="btnVoltar" data-dismiss="modal" class="btn btn-danger"> Fechar</button>
            </div>
        </div>
    </div>
</div>



<div class=" modal fade modal_confirm" id="modalConfirmarExclusaoVeiculo">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"> Excluir Veículo</h4>
            </div>
            <div class="modal-body">
                <p>
                    A confirmação resultará na exclusão permanente do item.
                    <br /><br />
                    Tem certeza que deseja excluir este Veículo ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="delete_veiculo">SIM</button>
                <button type="button" id="btnVoltar" data-dismiss="modal" class="btn btn-danger">NÃO</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/scripts/veiculo.js"></script>
}



